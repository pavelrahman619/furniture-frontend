# Environment Variables Template
# Copy this file to .env.local for development or .env.production for production
# and update the values according to your setup

# Backend API Configuration
# For development: http://localhost:8080
# For production: https://your-production-backend.com
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_VERSION=api

# Environment (development/production)
NODE_ENV=development

# Socket.IO Configuration (if using real-time features)
# Should match your backend URL
NEXT_PUBLIC_SOCKET_URL=http://localhost:8080

# Optional: Debug mode
# Set to true for development, false for production
DEBUG_API=true

# Optional: Analytics/Tracking IDs (uncomment and add your IDs)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# NEXT_PUBLIC_FACEBOOK_PIXEL_ID=XXXXXXXXX

# Optional: Payment configuration (uncomment and add your keys)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxx
# NEXT_PUBLIC_PAYPAL_CLIENT_ID=xxxxxxxxx

# Optional: CDN/Storage URLs (uncomment and add your URLs)
# NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com
# NEXT_PUBLIC_IMAGES_BASE_URL=https://images.your-domain.com

# Optional: Development-specific settings (uncomment if needed)
# NEXT_PUBLIC_ENABLE_MOCK_DATA=false
# NEXT_PUBLIC_SHOW_DEBUG_INFO=false
